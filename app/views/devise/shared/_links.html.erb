<%- if controller_name != 'sessions' %>
  <div class='mt-4 flex items-center justify-between'>
    <span class="border-b w-1/5 md:w-1/4"></span>
    <%= link_to "Log in", new_session_path(resource_name), class: 'text-xs text-gray-500 uppercase' %>
    <span class="border-b w-1/5 md:w-1/4"></span>
  </div>
<% end %>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <div class='mt-4 flex items-center justify-between'>
    <span class="border-b w-1/5 md:w-1/4"></span>
    <%= link_to "Sign up", new_registration_path(resource_name), class: 'text-xs text-gray-500 uppercase'  %>
    <span class="border-b w-1/5 md:w-1/4"></span>
  </div>
<% end %>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <div class='mt-4 flex items-center justify-between'>
    <span class="border-b w-1/5 md:w-1/4"></span>
    <%= link_to "Forgot your password?", new_password_path(resource_name), class: 'text-xs text-gray-500 uppercase'  %>
    <span class="border-b w-1/5 md:w-1/4"></span>
  </div>
<% end %>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <div class='mt-4 flex items-center justify-between'>

    <span class="border-b w-1/5 md:w-1/4"></span>
    <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name), class: 'text-xs text-gray-500 uppercase'  %>
    <span class="border-b w-1/5 md:w-1/4"></span>
  </div>
<% end %>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <div class='mt-4 flex items-center justify-between'>
    <span class="border-b w-1/5 md:w-1/4"></span>
    <%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name), class: 'text-xs text-gray-500 uppercase'  %>
    <span class="border-b w-1/5 md:w-1/4"></span>
  </div>
<% end %>

<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <div class='mt-4 flex items-center justify-between'>
      <span class="border-b w-1/5 md:w-1/4"></span>
      <%= link_to "Sign in with #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), method: :post, class: 'text-xs text-gray-500 uppercase'  %>
      <span class="border-b w-1/5 md:w-1/4"></span>
    </div>
  <% end %>
<% end %>
</div>
